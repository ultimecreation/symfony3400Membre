{% extends 'default/index.html.twig' %}

{% block body %}
<div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <h1 class="text-center">Connexion</h1>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('connexion') }}" method="post">
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur ou Email</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <label for="password">Mot de Passe</label>
                        <input type="password" id="password" name="_password" class="form-control"/>
                    </div>
                    <input type="checkbox" id="remember_me" name="_remember_me" unchecked />
                    <label for="remember_me">Se Rappeler de Moi</label>
                    {# If you want to control the URL the user
                        is redirected to on success (more details below) #}
                        <input type="hidden" name="_target_path" value="/profil" />
                    

                    <button type="submit" class="btn btn-primary btn-block">login</button>
                    <br>
                    <a href="{{path('demande_nouveau_mot_de_passe')}} ">Besoin d'un nouveau mot de passe</a>
                </form>

            </div>
        </div>
    </div>
{% endblock %}